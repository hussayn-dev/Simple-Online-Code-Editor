<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="">
        <title>Email Verification</title>
        <link rel="stylesheet" href="../assets/css/style.css">
        <link rel="stylesheet" href="../assets/css/bootstrap.min.css">
        <!--Scroll In Animation-->
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
        <script src="https://kit.fontawesome.com/997b229808.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </head>
    <body id="back">
        <section class="logIn" style="background-color: #607EAA">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">
                        <div class="sign">
                            <div class="line-rule"></div>
                            
                                <div class="row">
                                    <form class="sign-div">
                                
                                    <% if(data == null) { %>
                                      <%  if(error.statusCode == 400) { %>
                                            <div class="col-md-12 mb-3">
                                                <h4 style="color: black; text-align: center;"><%= error.message %></h1>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <button value="LogIn"> <a href="#"> LogIn</a></button>
                                               </div>
                                               <% }  else { %>
                                        <div class="col-md-12 mb-3">
                                        <h4 style="color: black; text-align: center;"><%= error.message %></h1>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <button value="signUp"> <a href="#"> SignUp</a></button>
                                       </div>
                                  <%  } %>
                                    <% }  else { %>
                                 <div class="col-md-12 mb-3">
                                  <h4 style="color: black; text-align: center;"><%= data.message %></h1>
                                 </div>
                                 <div class="col-md-12 mb-3">
                                    <button value="LogIn"> <a href="#"> LogIn</a></button>
                                   </div>
                                 <% } %>
                                 
                
                            
                                </form>
                                   
                            
                        </div>
                    </div>
                  
            </div>
        </section>
        <!--Scroll In Animation-->
        <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
        <script src="../assets/js/bootstrap.min.js"></script>
        <script src="../assets/js/main.js"></script>
    </body>
</html>